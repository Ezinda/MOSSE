    DataGrid1.Refresh

    login.iper = DataGrid1.Columns(1)
    login.fper = DataGrid1.Columns(2)
    
    Inicio.Caption = login.razonsoc + " - Periodo Contable: " + Str(login.iper) + " -" + Str(login.fper) + " - " + login.cap2
 Exit Sub

errorperiodo:
    mensa = MsgBox("No existen Periodos Contables", vbExclamation, "Atencion")

End Sub

